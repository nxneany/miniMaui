<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiApp1.Pages"
             xmlns:viewModels="clr-namespace:MauiApp1.ViewModels"
             x:Class="MauiApp1.Pages.LoginPage"
             BackgroundImageSource="share.jpg"
             NavigationPage.HasNavigationBar="False">

       <!-- BindingContext ของหน้า -->
       <ContentPage.BindingContext>
              <viewModels:LoginViewModel/>
       </ContentPage.BindingContext>

       <VerticalStackLayout Padding="30"
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="CenterAndExpand">
              <!-- โลโก้ -->
              <Border StrokeThickness="0"
                      Background="Transparent"
                      WidthRequest="200"
                      HeightRequest="100"
                      HorizontalOptions="Center">
                     <Image Source="tum.png"
                            WidthRequest="200"
                            HeightRequest="100"/>
              </Border>

              <BoxView HeightRequest="20"
                       Color="Transparent"/>

              <!-- การ์ดที่มีมิติ -->
              <Border BackgroundColor="#EDFFFFFF"
                      Padding="20"
                      Margin="10"
                      StrokeShape="RoundRectangle 10"
                      WidthRequest="550"
                      HorizontalOptions="Center"
                      VerticalOptions="Center">
                     <VerticalStackLayout Spacing="15">
                            <!-- ฟอร์มกรอกข้อมูล -->
                            <Label Text="Email"
                                   FontSize="18"
                                   HorizontalOptions="Start"/>
                            <Entry x:Name="emailEntry"
                                   Placeholder="Enter Email"
                                   Keyboard="Email"
                                   TextColor="Black"
                                   Text="{Binding Email}"/>
                            <!-- Binding Email -->

                            <Label Text="Password"
                                   FontSize="18"
                                   HorizontalOptions="Start"/>
                            <Entry x:Name="passwordEntry"
                                   Placeholder="Enter Password"
                                   IsPassword="True"
                                   TextColor="Black"
                                   Text="{Binding Password}"/>
                            <!-- Binding Password -->

                            <Button Text="Login"
                                    Clicked="OnLoginClicked"
                                    BackgroundColor="#FF024C4C"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="50"
                                    VerticalOptions="CenterAndExpand"/>
                     </VerticalStackLayout>
              </Border>
       </VerticalStackLayout>
</ContentPage>
